    <div class="row resp-link">
        {{#if body}}
        <div class="col-3 d-flex justify-content-center">
            <img src="{{ body }}" class="rounded-circle img-header-link  box-shadow">
        </div>
        {{else}}
        <h1>Ca marche pas</h1>
        {{/if}}
        {{#if user}} 
        <div class="col-3 d-flex align-items-center">
            <h3>{{user.username}}</h3>
        </div>
        {{/if}}

        {{!-- SPOTIFY CONFIRMED --}}
